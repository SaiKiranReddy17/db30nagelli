extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let umbrellaid = toShow._id 
    - let brand = toShow.brand
    - let color = toShow.color 
    - let cost = toShow.cost 
    - let actionid = "/resource/umbrella/" + umbrellaid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='umbrellaAttr mr-3') umbrella ID is: 
        div #{umbrellaid} 
      div.row 
        div(class='umbrellaAttr mr-3') brand is: 
        div #{brand} 
      div.row 
        div(class='umbrellaAttr mr-3') color is: 
        div #{color} 
      div.row 
        div(class='umbrellaAttr mr-3') cost is: 
        div #{cost} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the umbrella collection 
      window.location.href='/umbrellas' 
    } 
  script.
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'     // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.text(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/umbrella' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }